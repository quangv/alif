<h1>Listing alphabets</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @alphabets.each do |alphabet| %>
      <tr>
        <td><%= alphabet.name %></td>
        <td><%= link_to 'Show', alphabet %></td>
        <td><%= link_to 'Edit', edit_alphabet_path(alphabet) %></td>
        <td><%= link_to 'Destroy', alphabet, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Alphabet', new_alphabet_path %>
